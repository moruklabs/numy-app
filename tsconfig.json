{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "es2022",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@moruk/ai": ["./src/shared/ai/src"],
      "@moruk/config": ["./src/shared/config/src"],
      "@moruk/context": ["./src/shared/context/src"],
      "@moruk/event-tracking": ["./src/shared/event-tracking/src"],
      "@moruk/firebase": ["./src/shared/firebase/src"],
      "@moruk/gemini-client": ["./src/shared/gemini-client/src"],
      "@moruk/hoc": ["./src/shared/hoc/src"],
      "@moruk/hooks": ["./src/shared/hooks/src"],
      "@moruk/image": ["./src/shared/image/src"],
      "@moruk/image-filter": ["./src/shared/image-filter/src"],
      "@moruk/info": ["./src/shared/info/src"],
      "@moruk/logger": ["./src/shared/logger/src"],
      "@moruk/monitoring-client": ["./src/shared/monitoring-client/src"],
      "@moruk/navigation": ["./src/shared/navigation/src"],
      "@moruk/perplexity-client": ["./src/shared/perplexity-client/src"],
      "@moruk/storage": ["./src/shared/storage/src"],
      "@moruk/ui": ["./src/shared/ui/src"]
    },
    "target": "ES2022",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "extends": "expo/tsconfig.base"
}
