{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Validate (All Workspaces)",
      "type": "shell",
      "command": "yarn validate",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    },
    {
      "label": "Lint (All Workspaces)",
      "type": "shell",
      "command": "yarn lint",
      "problemMatcher": "$eslint-stylish",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "Type Check (All Workspaces)",
      "type": "shell",
      "command": "yarn type-check",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "Format (All Workspaces)",
      "type": "shell",
      "command": "yarn format:fix",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "build"
    },
    {
      "label": "Python: Run Hook Tests",
      "type": "shell",
      "command": "python3 -m unittest discover -s .claude/hooks/tests -p 'test_*.py'",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Python: Run Specific Test",
      "type": "shell",
      "command": "python3 -m unittest ${input:testFile}",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "id": "testFile",
      "type": "promptString",
      "description": "Test file path (e.g., .claude/hooks/tests/test_agent_validator)"
    }
  ]
}

