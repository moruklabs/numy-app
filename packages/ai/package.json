{
  "name": "@moruk/ai",
  "version": "1.0.0",
  "private": true,
  "description": "AI services with Apple Intelligence and Gemini fallback",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "lint": "yarn run lint:fix",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "test": "jest --forceExit",
    "test:coverage": "jest --coverage --forceExit",
    "test:watch": "jest --watch",
    "validate": "concurrently --kill-others-on-fail -n \"TypeCheck,Lint,Test\" -c \"magenta,cyan,yellow\" \"yarn run type-check\" \"yarn run lint\" \"yarn run test\"",
    "clean": "rm -rf dist",
    "doctor:fix": "exit 0",
    "fix": "yarn run lint:fix && yarn run format:fix && yarn run doctor:fix",
    "format": "yarn run format:fix",
    "format:fix": "npx prettier --ignore-path ../../.prettierignore --write . --log-level error"
  },
  "dependencies": {
    "@moruk/gemini-client": "*",
    "decimal.js": "*"
  },
  "devDependencies": {
    "@types/jest": "*",
    "concurrently": "*",
    "eslint": "*",
    "jest": "*",
    "prettier": "*",
    "ts-jest": "*",
    "typescript": "*"
  },
  "packageManager": "yarn@4.12.0"
}
